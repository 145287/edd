{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "module": "commonjs",
    "pretty": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./typescript/"
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "typescript/src/typescript-declarations.d.ts",
    "typescript/typings",
    "typescript/tests"
  ]
}
